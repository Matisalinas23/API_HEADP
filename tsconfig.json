{
  "exclude": ["node_modules", "dist"],
  "include": ["src", "src/types"],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist/",
    "module": "nodenext",
    "target": "esnext",
    "moduleResolution": "nodenext",
    "types": ["node"],
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
  },
}
